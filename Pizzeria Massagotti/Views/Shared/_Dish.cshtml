@model PizzeriaMassagotti.Models.Dish
@inject PizzeriaMassagotti.Services.DishService _dishService
@inject PizzeriaMassagotti.Services.IngredientService _ingredientService
@*@{
        var url = Url.Action("getImg", "Dishes", new {DishId = Model.DishId });
    }*@
@* ovanstående kod för att hämta bild på pizza *@

<section class="dish-container">

    <div class="col-md-12 container">
        <h5 class="pull-right">@(Model.Price + " SEK")</h5>
        <h4>@Model.Name</h4>
        <h6 class="pull-right">
            <button id =" cartButton" type="submit" class="buy" name="add-@Model.DishId">
                <i class="glyphicon glyphicon-shopping-cart"></i>
            </button>
        </h6>
        <p>
            @*@foreach (var item in Model.DishIngredients)*@
            @foreach (var item in _dishService.DishIngredientsForDishId(Model.DishId)) 
            {

                @(item.Ingredient.Name + " ")

            }
        </p>
    </div>   
</section>