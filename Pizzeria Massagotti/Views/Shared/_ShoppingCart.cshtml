@model List<PizzeriaMassagotti.Models.CartItem>
@inject PizzeriaMassagotti.Services.CartService _cartService


@foreach (var item in Model)
{
    Html.RenderPartial("_CartItem", item);
}

@if (Model.Count>0)
{
    <h5>@_cartService.TotalAmount(Model)</h5>
}




