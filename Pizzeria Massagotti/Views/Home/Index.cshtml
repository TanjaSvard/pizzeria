@model List<PizzeriaMassagotti.Models.Category>
@inject PizzeriaMassagotti.Services.CartService _cartService


@{
    ViewData["Title"] = "Home Page";
}
<div class="col-md-12 pull-right" >
    <h2 class="col-md-offset-6" style="padding-left:10px;">Menu</h2>
</div>

<form asp-controller="Home" asp-action="MakeOrderAction" method="post">
    <section class="homepage-container">       
        <div class="shopping-cart">
            <div class="col-md-6">
                @{
                    Html.RenderPartial("_ShoppingCart", _cartService.GetCart());
                }
            </div>
        </div>
        <div class="make-order">
            <div class="col-md-6">
                @*<h2>Menu</h2>*@
                @{
                    Html.RenderPartial("_MakeOrder", Model);
                }
            </div>
        </div>
      
    </section>
</form>


